<% layout('/layouts/boilerplate') -%>

    <body>
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">Make a Donation</h5>
                        </div>
                        <div class="card-body">
                            <form method="POST" action="/listings" class="needs-validation" novalidate>
                                <div class="mb-3">
                                    <label for="name" class="form-label">Enter Name</label>
                                    <input type="text" class="form-control" id="name" placeholder="Enter Name"
                                        name="Donation[name]" required>
                                    <div class="invalid-feedback">
                                        Please enter your name.
                                    </div>
                                    <div class="valid-feedback">
                                        Name looks good.
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="email" class="form-label">Enter valid Email</label>
                                    <input type="email" class="form-control" id="email" placeholder="Enter Email"
                                        name="Donation[email]" required>
                                    <div class="invalid-feedback">
                                        Please enter a valid email address.
                                    </div>
                                    <div class="valid-feedback">
                                        Email looks good.
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="phone_no" class="form-label">Enter Phone Number</label>
                                    <input type="tel" class="form-control" id="phone_no"
                                        placeholder="Enter Phone Number" name="Donation[phone_no]" required>
                                    <div class="invalid-feedback">
                                        Please enter your phone number.
                                    </div>
                                    <div class="valid-feedback">
                                        Phone number looks good.
                                    </div>
                                </div>

                                <button class="btn btn-success w-100">Make Donation</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script>
            // Example starter JavaScript for disabling form submissions if there are invalid fields
            (function () {
                'use strict'

                // Fetch all the forms we want to apply custom Bootstrap validation styles to
                var forms = document.querySelectorAll('.needs-validation')

                // Loop over them and prevent submission
                Array.prototype.slice.call(forms)
                    .forEach(function (form) {
                        form.addEventListener('submit', function (event) {
                            if (!form.checkValidity()) {
                                event.preventDefault()
                                event.stopPropagation()
                            }

                            form.classList.add('was-validated')
                        }, false)
                    })
            })()
        </script>
    </body>